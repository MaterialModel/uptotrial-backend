# Application settings
APP_NAME="UpToTrial API"
APP_DESCRIPTION="Clinical Trials Search API"
ENVIRONMENT="development"
DEBUG=true

# API settings
API_PREFIX="/api"
DOCS_URL="/docs"
OPENAPI_URL="/openapi.json"

# Database settings
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/uptotrial"
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# OpenAI settings
OPENAI_API_KEY="your-api-key-here"
OPENAI_MODEL="gpt-4o"

# Security settings
ACCESS_TOKEN_EXPIRE_MINUTES=10080
RATE_LIMIT_PERIOD_SECONDS=60
GLOBAL_RATE_LIMIT_REQUESTS=60
CORRELATION_ID_RATE_LIMIT_REQUESTS=30